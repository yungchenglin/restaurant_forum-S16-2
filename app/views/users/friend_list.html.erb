<div class="container">
  <div class="row">

   <div class="container">
    <div class="page-header">
      <h1>我的好友</h1>
    </div>
   </div>

    <% @friends.each do |friend|%>
      <div class="col-md-3 col-sm-4 col-xs-6 text-center user-item">
        <%= link_to user_path(friend) do %>
         <%= image_tag @user.avatar, class: "img-rounded" %>
          <h4><%= friend.name %></h4><br>
      </div>
        <% end %>
    <% end %>
  </div>
</div>
