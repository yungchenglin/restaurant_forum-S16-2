 <% if user != current_user %>
  <% if current_user.friend?(user) %>
    <%= link_to 'Unfriend', friendship_path(user), method: :delete, class: "btn btn-link" %>
  <% else %>
    <%= link_to 'Friend', friendships_path(friend_id: user), method: :post, class: "btn btn-default" %>
  <% end %>
<% end %>